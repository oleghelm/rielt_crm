{% for msg in app.session.flashBag.get('success') %}
    <div class="alert alert-success">
        {{ msg|raw }}
    </div>
{% endfor %}
{{ form_start(form,{'attr':{'class':'ajax-page-formsubmit','action':path('crm_client_edit',{id:form.vars.data.id})}}) }}
    <div class="row">
        <div class="col-sm-12 col-xs-12">{{ form_row(form.name, {'label': "Прізвище, ім'я"}) }}</div>
        <div class="col-sm-3 col-xs-6">{{ form_row(form.status) }}</div>
        <div class="col-sm-3 col-xs-6">{{ form_row(form.type) }}</div>
        <div class="col-sm-3 col-xs-6">{{ form_row(form.owner) }}</div>
        <div class="col-sm-3 col-xs-6">{{ form_row(form.email, {'label': 'Email'}) }}</div>
        <div class="col-sm-3 col-xs-6">{{ form_row(form.user, {'label': 'Хто веде'}) }}</div>
        <div class="col-sm-3 col-xs-6">{{ form_row(form.lastUpdate, {'label': 'Останній контакт'}) }}</div>
        <div class="col-sm-12 col-xs-12">{{ form_row(form.phones) }}</div>
        <div class="col-sm-12 col-xs-12">{{ form_row(form.info) }}</div>
    </div>
<input type="hidden" name="ajax" value="Y" />
    <button class="btn btn-success" type="submit" formnovalidate>Зберегти</button>&nbsp;
    <a href="javascript:void(0);" onclick="$.fancybox.close()" class="btn btn-primary">Відміна</a>
{{ form_end(form) }}